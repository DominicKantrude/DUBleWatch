@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>AnimeTracked</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AnimeTrackedId" />
            <div class="form-group">
                <label asp-for="AnimeId" class="control-label"></label>
