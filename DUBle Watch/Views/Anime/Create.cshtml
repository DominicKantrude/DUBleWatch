
@model DUBle_Watch.Models.AnimeViewModels.UploadImageViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Anime</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Anime.Name" class="control-label"></label>
                <input asp-for="Anime.Name" class="form-control" />
                <span asp-validation-for="Anime.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" class="form-control" type="file" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Anime.CurrentLastEpisode" class="control-label"></label>
                <input asp-for="Anime.CurrentLastEpisode" class="form-control" />
                <span asp-validation-for="Anime.CurrentLastEpisode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Anime.GenreId" class="control-label"></label>
                <select asp-for="Anime.GenreId" class="form-control" asp-items="ViewBag.GenreId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Anime.AnimeLink" class="control-label"></label>
                <input asp-for="Anime.AnimeLink" class="form-control" />
                <span asp-validation-for="Anime.AnimeLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Anime.Description" class="control-label"></label>
                <input asp-for="Anime.Description" class="form-control" />
                <span asp-validation-for="Anime.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Anime.AnimeReleaseDate" class="control-label"></label>
                <input asp-for="Anime.AnimeReleaseDate" class="form-control" />
                <span asp-validation-for="Anime.AnimeReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Anime.hasAnimeEnded" /> @Html.DisplayNameFor(model => model.Anime.hasAnimeEnded)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
