                <label asp-for="TimesCompleted" class="control-label"></label>
                <input asp-for="TimesCompleted" class="form-control" />
                <span asp-validation-for="TimesCompleted" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsInCurrentlyCompletedSection" /> @Html.DisplayNameFor(model => model.IsInCurrentlyCompletedSection)
